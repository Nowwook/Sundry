1. Alt + F11 키를 눌러 VBA 
2. 상단 메뉴에서 삽입 > 모듈을 선택하여 새 모듈을 추가
3. 코드입력
4. 코드 적용할 영역 선택 
5. 모듈이름을 선택하고 '실행'을 클릭


Sub ChangeColorForSP()
    Dim ws As Worksheet
    Dim cell As Range
    Dim startPos As Integer
    Dim searchText As String
    Dim cellText As String

    ' 현재 활성화된 시트
    Set ws = ActiveSheet
    ' 찾을 텍스트
    searchText = "SP_"

    ' 선택된 범위의 각 셀 확인
    For Each cell In Selection
        cellText = cell.Value
        ' 셀 값이 텍스트인 경우에만 실행
        If VarType(cell.Value) = vbString Then
            startPos = InStr(cellText, searchText)
            ' "SP_"로 시작하는 경우 색상 변경
            If startPos = 1 Then
                With cell.Characters(startPos, Len(searchText)).Font
                    .Color = RGB(255, 0, 0) ' 원하는 색상으로 변경 (여기서는 빨간색)
                End With
            End If
        End If
    Next cell
End Sub


Sub ChangeColorForSPWord()
    Dim ws As Worksheet
    Dim cell As Range
    Dim startPos As Integer
    Dim endPos As Integer
    Dim searchText As String
    Dim cellText As String
    Dim word As String

    ' 현재 활성화된 시트
    Set ws = ActiveSheet
    ' 찾을 텍스트
    searchText = "SP_"

    ' 선택된 범위의 각 셀 확인
    For Each cell In Selection
        cellText = cell.Value
        ' 셀 값이 텍스트인 경우에만 실행
        If VarType(cell.Value) = vbString Then
            startPos = InStr(cellText, searchText)
            ' "SP_"로 시작하는 경우
            If startPos > 0 Then
                ' 공백이나 끝까지 단어를 찾기
                endPos = InStr(startPos, cellText, " ")
                If endPos = 0 Then
                    endPos = Len(cellText) + 1
                End If
                ' 단어 추출
                word = Mid(cellText, startPos, endPos - startPos)
                ' 색상 변경
                With cell.Characters(startPos, Len(word)).Font
                    .Color = RGB(255, 0, 0) ' 원하는 색상으로 변경 (여기서는 빨간색)
                End With
            End If
        End If
    Next cell
End Sub
